<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.detail.WordDetailFragment">

    <ImageView
        android:id="@+id/iv_selected_word"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_apple" />

    <LinearLayout
        android:id="@+id/ll_selected_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_selected_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tw_selected_turkish_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Turkish Word"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tw_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tw_selected_english_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="English Word"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:gravity="center"  />
    </LinearLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@+id/ll_selected_word"/>

    <TextView
        android:id="@+id/tw_usage_examples_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Examples of use"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rw_usageExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_usage_examples_title"
        android:padding="16dp"/>


    <TextView
        android:id="@+id/rw_other_languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Uses in other languages"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rw_usageExample" />


    <LinearLayout
        android:id="@+id/ll_language_translations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rw_other_languages"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tw_spanish_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spanish: Manzana"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tw_german_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="German: Apfel"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tw_french_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="French: Pomme"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tw_italian_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italian: Mela"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:contentDescription="Add Word" />


</androidx.constraintlayout.widget.ConstraintLayout>