<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorldWords" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.WorldWords" parent="Base.Theme.WorldWords" />

    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bottom_nav</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BaseImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/empty_image_height</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_large</item>
        <item name="android:contentDescription">@string/empty_list</item>
        <item name="android:src">@drawable/ic_empty</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>